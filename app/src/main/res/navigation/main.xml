<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/videoCallFragment"
        android:name="com.revis.ui.video.VideoCallFragment"
        android:label="VideoCallFragment">
        <argument
            android:name="channel"
            app:argType="string"
            android:defaultValue=""/>
    </fragment>
    <activity
        android:id="@+id/videoCallActivity"
        android:name="com.revis.ui.video.VideoCallActivity"
        android:label="VideoCallActivity">
        <argument
            android:name="channel"
            app:argType="string"
            android:defaultValue=""/>
    </activity>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.revis.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_videoCallActivity"
            app:destination="@id/videoCallActivity" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_joinCallOperatorDialog"
            app:destination="@id/joinCallOperatorDialog" />
        <action
            android:id="@+id/action_homeFragment_to_recordCallConfirmationDialog"
            app:destination="@id/recordCallConfirmationDialog" />
        <action
            android:id="@+id/action_homeFragment_to_incomingCallFragment"
            app:destination="@id/incomingCallFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.revis.ui.settings.SettingsFragment"
        android:label="SettingsFragment" >
        <action
            android:id="@+id/action_settingsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <dialog
        android:id="@+id/joinCallOperatorDialog"
        android:name="com.revis.ui.home.JoinCallOperatorDialog"
        android:label="JoinCallOperatorDialog" >
        <action
            android:id="@+id/action_joinCallOperatorDialog_to_videoCallActivity"
            app:destination="@id/videoCallActivity" />
    </dialog>
    <dialog
        android:id="@+id/recordCallConfirmationDialog"
        android:name="com.revis.ui.contacts.RecordCallConfirmationDialog"
        android:label="RecordCallConfirmationDialog"
        >
        <action
            android:id="@+id/action_recordCallConfirmationDialog_to_videoCallActivity"
            app:destination="@id/videoCallActivity" />
    </dialog>
    <fragment
        android:id="@+id/incomingCallFragment"
        android:name="com.revis.ui.contacts.IncomingCallFragment"
        android:label="IncomingCallFragment" >
        <action
            android:id="@+id/action_incomingCallFragment_to_videoCallActivity"
            app:destination="@id/videoCallActivity" />
    </fragment>
</navigation>