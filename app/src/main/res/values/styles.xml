<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorAccentLight</item>
        <item name="android:fontFamily">@font/red_hat</item>
    </style>

    <style name="AppTheme" parent="BaseTheme"/>

    <style name="DeepLinkDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/deep_link_dialog_prompt_background</item>
        <item name="android:colorControlHighlight">@color/colorAccentLight</item>
        <item name="android:fontFamily">@font/red_hat</item>
    </style>

    <style name="AppBarTitleText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_extra_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppBarTitleText.Light">
        <item name="android:textColor">@color/whiteDirty</item>
    </style>

    <style name="PrimaryText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
        <item name="tabRippleColor">@color/colorAccentLight</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="CircularShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CircularIconButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconPadding">4dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="shapeAppearanceOverlay">@style/CircularShape</item>
    </style>

    <style name="ExtendedFloatingButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:textColor">@color/whiteDirty</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="iconTint">@color/whiteDirty</item>
    </style>
    
    <style name="CircleButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/circle_button</item>
        <item name="tint">@color/icon_tint</item>
    </style>

    <style name="CircleButtonActive" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/circle_button_active_select</item>
        <item name="tint">@color/icon_tint_active_select</item>
    </style>

    <style name="SolidButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/whiteDirty</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SolidButtonStyle.Accent">
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <style name="SolidButtonStyle.Primary">
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="TextButtonStyle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">@color/colorAccentLight</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="UnelevatedSolidButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/whiteDirty</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="UnelevatedSolidButtonStyle.CallEnd">
        <item name="android:backgroundTint">@color/red</item>
    </style>

</resources>